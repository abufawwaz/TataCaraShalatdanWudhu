<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.tatacara.tayamum.TayamumActivity">

    <Button
        android:id="@+id/syaratTayamum_Id"
        android:text="Syarat Tayamum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/rukunTayamum_Id"
        android:text="Rukun Tayamum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/caraTayamum_Id"
        android:text="Cara Tayamum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>