<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tatacarashalatdanwudhu">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.tatacara.shalat.CaraShalatActivity" />
        <activity android:name=".view.tatacara.shalat.RukunShalatActivity" />
        <activity android:name=".view.tatacara.tayamum.CaraTayamumActivity" />
        <activity android:name=".view.tatacara.tayamum.RukunTayamumActivity" />
        <activity android:name=".view.tatacara.berwudhu.CaraBerWudhuActivity" />
        <activity android:name=".view.tatacara.berwudhu.RukunWudhuActivity" />
        <activity android:name=".view.tatacara.shalat.SyaratShalatActivity" />
        <activity android:name=".view.tatacara.tayamum.SyaratTayamumActivity" />
        <activity android:name=".view.tatacara.berwudhu.BerwudhuActivity" />
        <activity android:name=".view.tatacara.berwudhu.SyaratBerwudhuActivity" />
        <activity android:name=".view.tentang.TentangActivity" />
        <activity android:name=".view.video.VideoActivity" />
        <activity android:name=".view.tatacara.TataCaraActivity" />
        <activity android:name=".view.tentang.PengertianShalatActivity" />
        <activity android:name=".view.tentang.PengertianTayamumActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.tentang.TentangActivity" />
        </activity>
        <activity
            android:name=".view.tentang.PengertianWudhuActivity"
            android:supportsRtl="true" />
        <activity
            android:name=".view.video.VideoShalatActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".view.video.VideoTayamumActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.video.VideoWudhuActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".view.tatacara.shalat.ShalatActivity" />
        <activity android:name=".view.tatacara.tayamum.TayamumActivity" />
        <activity android:name=".MainActivity">

        </activity>
    </application>

</manifest>